package com.anaxivis.application;

import java.io.File;

import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.StackPane;

public class MainContent {

    private StackPane view;
    private ImageView iView;
    private int type;

    public MainContent() {
	view = new StackPane();
	iView = new ImageView();

	view.getChildren().add(iView);
    }

    public void loadSVGFile(String fileName, int newType) {
	Image image = SVGImageLoader.loadFromFile(fileName);
	iView.setImage(image);
	type = newType;
    }

    public void loadSVGFile(File file, int newType) {
	Image image = SVGImageLoader.loadFromFile(file);
	iView.setImage(image);
	type = newType;
    }

    public void loadImage(Image newImage, int newType) {
	iView.setImage(newImage);
	type = newType;
    }

    public StackPane getView() {
	return view;
    }
}
