package com.anaxivis.application;

import java.util.concurrent.CountDownLatch;

import javafx.application.Application;
import javafx.stage.Stage;

public class IAxanivis extends Application{
    private static final CountDownLatch latch = new CountDownLatch(1);
    
    private static IAxanivis app;
    
    public IAxanivis() {
	app = new AxanivisApplication();
	setStartUpTest(this);
    }

    @Override
    public void start(Stage primaryStage) throws Exception {
	
	
    }
    
    public static IAxanivis waitForStartUpTest() {
	try {
	    latch.await();
	} catch (InterruptedException e) {
	    e.printStackTrace();
	}
	return app;
    }

    public static void setStartUpTest(IAxanivis app) {
	IAxanivis.app = app;
	latch.countDown();
    }   
}
