package com.anaxivis.application;

import javafx.scene.image.Image;

public class SVGImageGenerator {

    public static final int LOGMAR_R_U = 1;
    public static final int LOGMAR_R_B = 2;

    public static Image generateImage(int type, int width, int height, int dpi) {

	Image image = null;

	switch (type) {
	case LOGMAR_R_U:
	    image = SVGImageLoader.loadFromString(SVGChartGenerator.generateTestLOGMARChart(1920, 1080, 96));
	    break;
	default:
	    // TODO: Return some default image
	    break;
	}

	return image;
    }
}
