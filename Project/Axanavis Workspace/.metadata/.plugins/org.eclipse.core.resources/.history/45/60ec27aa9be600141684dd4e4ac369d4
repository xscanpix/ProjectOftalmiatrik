package com.anaxivis.application;

import java.util.concurrent.CountDownLatch;

import javafx.application.Application;
import javafx.stage.Stage;

public class IAxanivis extends Application {

    protected static AxanivisApplication application = null;

    protected static final CountDownLatch latch = new CountDownLatch(1);

    protected static AxanivisApplication waitForStartUpTest() {
	try {
	    latch.await();
	} catch (InterruptedException e) {
	    e.printStackTrace();
	}
	return application;
    }

    protected static void setStartUpTest(AxanivisApplication app) {
	application = app;
	latch.countDown();
    }

    @Override
    public void start(Stage primaryStage) throws Exception {
	application.start(primaryStage);	
    }  
}
