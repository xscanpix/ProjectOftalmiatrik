package com.anaxivis.application;

import java.io.File;

import javafx.geometry.Rectangle2D;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.StackPane;

public class MainContent {

    private StackPane view;
    private ImageView iView;

    public MainContent() {
	view = new StackPane();
	iView = new ImageView();

	view.getChildren().add(iView);
    }

    public void setImageHalf(boolean upper) {
	Rectangle2D old = iView.getViewport();
	System.out.println(old);
	if (upper) {
	    iView.setViewport(new Rectangle2D(0, 0, view.getWidth(), view.getHeight() / 2));
	} else {
	    iView.setViewport(new Rectangle2D(0, old.getHeight() / 2, old.getWidth(), old.getHeight()));
	}
    }

    public void loadSVGFile(String fileName) {
	Image image = SVGImageLoader.loadFromFile(fileName);
	iView.setImage(image);
    }

    public void loadSVGFile(File file) {
	Image image = SVGImageLoader.loadFromFile(file);
	iView.setImage(image);
    }

    public void loadImage(Image newImage) {
	iView.setImage(newImage);
    }

    public StackPane getView() {
	return view;
    }
}
